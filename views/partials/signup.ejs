<section>
    <h1 class="text-primary">Regístrese</h1>
    <form action="/signup" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" onChange="onChange()">
        </div>
        <div class="form-group">
            <label>Confirm Password</label>
            <input type="password" class="form-control" name="confirm" onChange="onChange()">
        </div>
        <div class="form-group">
            <label>Nombre/s</label>
            <input type="text" class="form-control" name="firstname">
        </div>
        <div class="form-group">
            <label>Apellido/s</label>
            <input type="text" class="form-control" name="lastname">
        </div>
        <div class="form-group">
            <label>Edad</label>
            <input type="number" class="form-control" name="age">
        </div>
        <div class="form-group">
            <label>Dirección</label>
            <input type="text" class="form-control" name="address">
        </div>
        <div class="form-group">
            <label>Teléfono Celular</label>
            <%- include('./internationalPhoneCodes.ejs') %>
            <input type="text" class="form-control" name="phonenumber"
                oninput="this.value = this.value.replace(/[^0-9]/g, '').replace(/(\..*)\./g, '$1')" required>
        </div>

        <div class="form-group">
            <label for="image">Subir avatar</label>
            <input type="file" class="form-control-file" name="image" accept=".jpg, .jpeg, .png" value="" required>
        </div>

        <input type="submit" class="btn btn-success">
    </form>
    <div>
        <a href="/login" class="btn btn-primary">Back to Login</a>
    </div>
</section>
<script>
    function onChange() {
        const password = document.querySelector('input[name=password]');
        const confirm = document.querySelector('input[name=confirm]');
        if (confirm.value === password.value) {
            confirm.setCustomValidity('');
        } else {
            confirm.setCustomValidity('Passwords do not match');
        }
    }
</script>